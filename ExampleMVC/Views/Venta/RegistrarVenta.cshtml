@model ExampleMVC.Models.Producto
@{
    ViewData["Title"] = "Comprar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar Compra</h2>



<div class="container">

    <form class="form-horizontal" action="/Venta/RegistrarVenta" method="post">
        <div class="form-group">
            <label class="control-label col-sm-2" for="a1">Producto: @Model.nombre </label>

        </div>
        <div class="form-group">

            <label>Codigo de Producto</label>
            <input type="text" class="form-control" id="a1" placeholder="Cantidad" name="idProducto" value="@Model.id" required style="width:500px" readonly>
        </div>
<div class="form-group">

    <label>Precio Unitario</label><input type="text" class="form-control" id="a1" name="precioUnitario" placeholder="@Model.precioUnitario" style="width:500px" value="@Model.precioUnitario" readonly>
</div>
<div class="form-group">
    <label class="control-label col-sm-2" for="a1">Cantidad :</label>
    <div class="col-sm-10">
        <input type="number" class="form-control" id="a1" placeholder="Cantidad" name="cantidad" min="1" max="@Model.cantidad" required style="width:500px">
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Realizar Compra</button>
        </div>
    </div>


    </form>

</div>



